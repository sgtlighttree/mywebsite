---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
export interface Props {
  pageTitle: string;
  metaTitle?: string; // different title for tabs
  pageDescription?: string;
  showFooterCta?: boolean;
}
const { pageTitle, metaTitle, pageDescription, showFooterCta = true } = Astro.props;
const siteName = "Matthew Oyan";
const finalTabTitle = metaTitle ? metaTitle : `${siteName} - ${pageTitle}`;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{finalTabTitle}</title>
    {pageDescription && <meta name="description" content={pageDescription} />}

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content={finalTabTitle} />
    {pageDescription && <meta property="og:description" content={pageDescription} />}
    <meta property="og:image" content="/images/dti25pa_heroImage.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url.href} />
    <meta property="twitter:title" content={finalTabTitle} />
    {pageDescription && <meta property="twitter:description" content={pageDescription} />}
    <meta property="twitter:image" content="/images/dti25pa_heroImage.png" />

  </head>
  <body>
    <Header />
    <h1>{pageTitle}</h1>
    <slot />
    <Footer showCta={showFooterCta} />
  </body>
</html>
