---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import BlogPost from "../../components/BlogPost.astro";

export async function getStaticPaths() {
  const blogEntries = await getCollection("blog");
  const fictionPosts = Object.values(
    import.meta.glob("../fiction/*.md", { eager: true }),
  );

  // Normalize entries to a common format
  const normalizedBlog = blogEntries.map((entry) => ({
    title: entry.data.title,
    url: `/blog/${entry.slug}`,
    tags: entry.data.tags,
    date: entry.data.pubDate,
  }));

  const normalizedFiction = fictionPosts.map((post: any) => ({
    title: post.frontmatter.title,
    url: post.url,
    tags: post.frontmatter.tags || [],
    date: post.frontmatter.pubDate,
  }));

  const allPosts = [...normalizedBlog, ...normalizedFiction];

  const uniqueTags = [...new Set(allPosts.map((post) => post.tags).flat())];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) => post.tags.includes(tag));
    // Sort by date descending
    filteredPosts.sort(
      (a, b) => new Date(b.date).valueOf() - new Date(a.date).valueOf(),
    );

    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<BaseLayout pageTitle={tag}>
  <p>Posts tagged with {tag}</p>
  <ul>
    {
      posts.map((post) => (
        <BlogPost url={post.url} title={post.title} date={post.date} />
      ))
    }
  </ul>
</BaseLayout>
