---
import BaseLayout from '../layouts/BaseLayout.astro';
import Social from '../components/Social.astro';
const pageTitle = "Contact";
---
<BaseLayout pageTitle={pageTitle} showFooterCta={false}>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <style>
    /* Desktop styles */
    @media screen and (min-width: 769px) {
      .tile-container {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      }
    }
  </style>
  <div class="tile-container">
    {[
      { platform: "Facebook", username: "lighttree.gfx" },
      { platform: "LinkedIn", username: "in/matthewoyan/" },
      { platform: "Instagram", username: "sgtlighttree" },
    ].map((item) => (
      <div class="tile-item">
        <Social platform={item.platform} username={item.username} />
      </div>
    ))}
  </div>
  <div class="contact-form">
    <h2>Get In Touch</h2>
    <form
      name="contact"
      method="POST"
      data-netlify="true"
      action="/success/"
    >
      <input type="hidden" name="form-name" value="contact" />
      <input type="hidden" name="subject" id="subject-field" />

      <div class="name-group">
        <div class="form-group">
          <label for="firstname">First Name*</label>
          <input type="text" name="firstname" id="firstname" required>
        </div>
        <div class="form-group">
          <label for="lastname">Last Name*</label>
          <input type="text" name="lastname" id="lastname" required>
        </div>
      </div>
      <div class="form-group">
        <label for="email">Email*</label>
        <input type="email" name="email" id="email" required>
      </div>
      <div class="form-group">
        <label for="organization">Organization/Company/Agency</label>
        <input type="text" name="organization" id="organization">
      </div>
      <div class="form-group">
        <label for="phone">Phone Number</label>
        <input type="tel" name="phone" id="phone">
      </div>
      <div class="form-group">
        <label for="topic">Subject*</label>
        <input type="text" name="topic" id="topic" required>
      </div>
      <div class="form-group">
        <label for="message">Message*</label>
        <textarea name="message" id="message" rows="5" required></textarea>
      </div>
      <button type="submit">Send</button>
    </form>
  </div>
  <style>
      /* Contact Form Styling */
  .contact-form {
    max-width: 100%;
    margin: 2rem 0;
  }

  .contact-form button {
    width: 100%;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .name-group {
    display: flex;
    gap: 0.75rem; /* Adjust the gap as needed */
  }

  .name-group .form-group {
    flex: 1; /* This will make both inputs share the row equally */
  }
  </style>

  <script>
    const contactForm = document.querySelector('form[name="contact"]');
    if (contactForm) {
      contactForm.addEventListener('submit', (event) => {
        const topicEl = document.getElementById('topic') as HTMLInputElement | null;
        const firstnameEl = document.getElementById('firstname') as HTMLInputElement | null;
        const lastnameEl = document.getElementById('lastname') as HTMLInputElement | null;
        const organizationEl = document.getElementById('organization') as HTMLInputElement | null;
        const subjectField = document.getElementById('subject-field') as HTMLInputElement | null;

        if (topicEl && firstnameEl && lastnameEl && subjectField) {
          const topic = topicEl.value;
          const firstname = firstnameEl.value;
          const lastname = lastnameEl.value;
          const organization = organizationEl ? organizationEl.value.trim() : "";

          let subject = `[${topic}] - Message from ${firstname} ${lastname}`;

          if (organization) {
            subject += `, ${organization}`;
          }

          subjectField.value = subject;
        }
      });
    }
  </script>
</BaseLayout>
