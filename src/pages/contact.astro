---
import BaseLayout from '../layouts/BaseLayout.astro';
import Social from '../components/Social.astro';
const pageTitle = "Contact";
---
<BaseLayout pageTitle={pageTitle} showFooterCta={false}>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <style>
    /* Desktop styles */
    @media screen and (min-width: 769px) {
      .tile-container {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      }
    }
  </style>
  <div class="tile-container">
    <!-- <div class="tile-item">
      <a href="mailto:matthew.oyan@gmail.com">Email</a>
    </div> -->
    {[
      { platform: "Facebook", username: "lighttree.gfx" },
      { platform: "LinkedIn", username: "in/matthewoyan/" },
      { platform: "Instagram", username: "sgtlighttree" },
    ].map((item) => (
      <div class="tile-item">
        <Social platform={item.platform} username={item.username} />
      </div>
    ))}
  </div>
  <div class="contact-form">
    <h2>Get In Touch</h2>
    <form
      name="contact"
      method="POST"
      data-netlify="true"
      data-netlify-subject="{{subject}}"
      onsubmit="return buildSubject();"
    >
      <!-- This hidden input is still needed so Netlify knows the form's name -->
      <input type="hidden" name="form-name" value="contact" />
      <!-- Hidden input for custom subject -->
      <input type="hidden" name="subject" id="subject" value="" />
      <div class="name-group">
        <div class="form-group">
          <label for="firstname">First Name*</label>
          <input type="text" name="firstname" id="firstname" required>
        </div>
        <div class="form-group">
          <label for="lastname">Last Name*</label>
          <input type="text" name="lastname" id="lastname" required>
        </div>
      </div>
      <div class="form-group">
        <label for="email">Email*</label>
        <input type="email" name="email" id="email" required>
      </div>
      <div class="form-group">
        <label for="organization">Organization/Company/Agency</label>
        <input type="text" name="organization" id="organization">
      </div>
      <div class="form-group">
        <label for="phone">Phone Number</label>
        <input type="tel" name="phone" id="phone">
      </div>
      <div class="form-group">
        <!-- The input `name="topic"` corresponds to the {{topic}} placeholder -->
        <label for="topic">Subject*</label>
        <input type="text" name="topic" id="topic" required>
      </div>
      <div class="form-group">
        <label for="message">Message*</label>
        <textarea name="message" id="message" rows="5" required></textarea>
      </div>
      <!-- <div class="form-group">
        <label>
          <label for="file">Add File, max size 8 MB (Optional)</label>
          <input name="file" type="file" />
        </label>
      </div> -->
      <button type="submit">Send</button>
    </form>
  </div>
  <style>
      /* Contact Form Styling */
  .contact-form {
    max-width: 100%;
    margin: 2rem 0;
  }

  .contact-form button {
    width: 100%;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .name-group {
    display: flex;
    gap: 0.75rem; /* Adjust the gap as needed */
  }

  .name-group .form-group {
    flex: 1; /* This will make both inputs share the row equally */
  }
  </style>

  <script>
    function buildSubject() {
      const topicEl = document.getElementById('topic') as HTMLInputElement;
      const firstnameEl = document.getElementById('firstname') as HTMLInputElement;
      const lastnameEl = document.getElementById('lastname') as HTMLInputElement;
      const organizationEl = document.getElementById('organization') as HTMLInputElement;
      const subjectEl = document.getElementById('subject') as HTMLInputElement;

      if (!topicEl || !firstnameEl || !lastnameEl || !organizationEl || !subjectEl) {
        console.error('Form element not found');
        return false;
      }

      const topic = topicEl.value;
      const firstname = firstnameEl.value;
      const lastname = lastnameEl.value;
      const organization = organizationEl.value.trim();

      let subject = `[${topic}] - Message from ${firstname} ${lastname}`;

      if (organization) {
        subject += `, ${organization}`;
      }

      subjectEl.value = subject;
      console.log('Generated subject:', subject);
      return true;
    }
  </script>
</BaseLayout>
