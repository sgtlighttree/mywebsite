---
import BaseLayout from '../layouts/BaseLayout.astro';
import Social from '../components/Social.astro';
const pageTitle = "Contact";
---
<BaseLayout pageTitle={pageTitle} showFooterCta={false}>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  
  <div class="tile-container">
    <div class="tile-item">
      <a href="mailto:matthew.oyan@protonmail.com">Email</a>
    </div>
    {[
      { platform: "LinkedIn", username: "in/matthewoyan/" },
      { platform: "Instagram", username: "sgtlighttree" },
    ].map((item) => (
      <div class="tile-item">
        <Social platform={item.platform} username={item.username} />
      </div>
    ))}
  </div>
  <div class="contact-form">
    <h2>Get In Touch</h2>
    <!-- 
      CHANGE #1: Added `data-netlify-subject=""` to the form tag. 
      The script will populate this.
    -->
    <form name="contact" method="POST" data-netlify="true" action="/success/" data-netlify-subject="">
      <!-- This hidden input is still needed so Netlify knows the form's name -->
      <input type="hidden" name="form-name" value="contact" />
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" required>
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" id="email" required>
      </div>
      <div class="form-group">
        <!-- 
          CHANGE #2: Renamed the input back to "topic". 
          This is what will appear in the email BODY.
        -->
        <label for="topic">Subject</label>
        <input type="text" name="topic" id="topic" required>
      </div>
      <div class="form-group">
        <label for="message">Message</label>
        <textarea name="message" id="message" rows="5" required></textarea>
      </div>
      <!-- 
        CHANGE #3: The hidden subject input has been completely REMOVED.
      -->
      <button type="submit">Send</button>
    </form>
  </div>
  <style>
      /* Contact Form Styling */
  .contact-form {
    max-width: 100%;
    margin: 2rem 0;
  }

  .contact-form button {
    width: 100%;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ddd;
    background-color: #fff;
    font-family: inherit;
    font-size: 1rem;
    transition: border-color 0.3s, box-shadow 0.3s;
    box-sizing: border-box; /* This ensures padding doesn't add to width */
  }

  /* Responsive form adjustments */
  @media (max-width: 600px) {
    .form-group input,
    .form-group textarea {
      padding: 0.6rem;
      font-size: 16px; /* Prevents iOS zoom on focus */
    }
  }

  .form-group input:focus,
  .form-group textarea:focus {
    border-color: #666;
    box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.1);
    outline: none;
  }

  .contact-form button {
    background-color: #333;
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    font-family: inherit;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .contact-form button:hover {
    background-color: #555;
  }

  /* Contact Info Styling */
  .contact-info {
    margin-bottom: 2rem;
  }

  .contact-info p {
    display: flex;
    align-items: center;
    margin-bottom: 0.75rem;
  }

  .contact-info .material-symbols-outlined {
    margin-right: 0.75rem;
  }

  .contact-info a {
    text-decoration: none;
  }
  </style>

  <script is:inline>
    // CHANGE #4: The script is now simplified to target the form attribute.
    const contactForm = document.querySelector('form[name="contact"]');
    const nameInput = contactForm.querySelector('#name');
    const topicInput = contactForm.querySelector('#topic'); // Get the visible subject field

    contactForm.addEventListener('submit', function(event) {
      const name = nameInput.value || '(unnamed)';
      const topic = topicInput.value || 'Website Contact';

      const subjectLine = `[${topic}] - Message from ${name}`;

      // Set the data-netlify-subject attribute on the form itself
      contactForm.setAttribute('data-netlify-subject', subjectLine);
    });
  </script>
</BaseLayout>